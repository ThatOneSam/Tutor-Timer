<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender used by the Gradle `run` task - only emits to stdout -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{yyyy-MM-dd HH:mm:ss zzz} [%thread] %-5level %logger{36} - %msg%n</Pattern>
        </encoder>
    </appender>

    <!-- Only print logs from our plugin package to the console -->
    <logger name="com.tutortimer" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- Turn off everything else so stdout only contains com.tutortimer entries -->
    <root level="OFF" />
</configuration>